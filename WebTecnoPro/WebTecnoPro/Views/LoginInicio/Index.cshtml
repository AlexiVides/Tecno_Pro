@model WebTecnoPro.Models.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
  
    <body id="fondo">
        
            <style>
                footer {
                    position: absolute;
                    right:-300px;
                    width: 100%;
                    height: 5vh;
                    height: auto;
                    bottom: -20px;
                }

                    footer p {
                        position: absolute;
                        color: white;
                        left: 40%;
                        background-color: black;
                        background-size:100%;
                    }
                #perro {
                    width: 100px;
                    height: 100px;
                    border-radius: 50%;
                    right:-110px;
                    bottom:445px;
                    position:absolute;
                }
                #c2 {
                    background-color: red;
                    position:center;
                   
                }
            </style>
            <div class="form-horizontal">
                


                
                <div class="box">

                    <h1 id="titulo">Dr.Patitas</h1>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">


                        @Html.Label("Correo Electronico", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" id="Usuario">

                            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control invalid-feedback", @placeholder = "Ejemplo@gmail.com", @type = "email", required = "required" } })
                            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10" id="Contra">
                            @Html.EditorFor(model => model.contra, new { htmlAttributes = new { @class = "form-control ", @type = "password", @placeholder = "*******", required = "required" } })
                            @Html.ValidationMessageFor(model => model.contra, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <h2 id="c2">@ViewBag.Mensaje</h2>
                    <button class="btn-neon">
                        <span id="span1"></span>
                        <span id="span2"></span>
                        <span id="span3"></span>
                        <span id="span4"></span>
                        Ingresar
                    </button>

                </div>
            </div>
    </body>
}


