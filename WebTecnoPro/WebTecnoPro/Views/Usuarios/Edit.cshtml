@model WebTecnoPro.Models.Usuario

@{
    ViewBag.Title = "Edit";
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Crear.css">


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <body class="fondo3">
        <div class="form-horizontal">
            <h4>Actualizar usuario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idUsuario)

            <div class="card">

                <div class="card-header">
                    Formulario de Usuario
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label>Correo Electronico</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control  ", @placeholder = "Ejemplo@gmail.com", @type = "email", required = "required" } })
                                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Password</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.contra, new { htmlAttributes = new { @class = "form-control ", @type = "password", @placeholder = "*******", required = "required" } })
                                @Html.ValidationMessageFor(model => model.contra, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Estado</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control ", required = "required" } })
                                @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3">
                            <button type="submit" value="Edit" class="btn btn-success">Actualizar</button>

                        </div>

                        <div class="mb-3">
                            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                <strong>@ViewBag.Mensaje</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>

                        </div>
                    </form>
                </div>
            </div>


        </div>
    </body>



}

<div>
    @Html.ActionLink("Atras", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
