@model WebTecnoPro.Models.Producto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<body>
    <br />
    <div class="card">

        <div class="card-header">
            Detalles
        </div>
        <div class="card-body">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">

                        <img src="@Url.Action("getImage","Productos", new {id=Model.idProducto})" class="card-img-top" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">
                                Nombre:
                                @Html.DisplayFor(model => model.nombre)
                            </p>
                            <p class="card-text">
                                Cantidad:
                                @Html.DisplayFor(model => model.cantidad)
                            </p>
                            <p class="card-text">
                                Precio:
                                @Html.DisplayFor(model => model.precio)
                            </p>
                            <p class="card-text">
                                Detalle:
                                @Html.DisplayFor(model => model.detalle)
                            </p>
                            <p class="card-text">
                                Marca:
                                @Html.DisplayFor(model => model.marca)
                            </p>
                            <p class="card-text">
                                Modelo:
                                @Html.DisplayFor(model => model.modelo)
                            </p>
                            <p class="card-text">
                                Codigo:
                                @Html.DisplayFor(model => model.codigo)
                            </p>

                            <p class="card-text"><small class="text-muted">Estado: @Html.DisplayFor(model => model.estado)</small></p>
                        </div>


                    </div>
                </div>
            </div>
        </div>

    </div>
    <br />
    <div>
        @Html.ActionLink("Atras", "Index")
    </div>

</body>


<p>


    @Html.ActionLink("Back to List", "Index")
</p>
