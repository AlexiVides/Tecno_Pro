@model WebTecnoPro.Models.Producto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "Productos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card">

        <div class="card-header">
            Formulario de Producto
        </div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label>Id:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.idProducto, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="mb-3">
                    <label>Cantidad:</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label>Precio:</label>
                        @Html.EditorFor(model => model.precio, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-10">
                        <label>Detalle:</label>
                        @Html.EditorFor(model => model.detalle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.detalle, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-10">
                        <label>Marca:</label>
                        @Html.EditorFor(model => model.marca, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.marca, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label>Modelo:</label>
                        @Html.EditorFor(model => model.modelo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.modelo, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-10">
                        <label>Codigo:</label>
                        @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.imagen, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <img width="100" height="100" src="@Url.Action("getImage","Productos", new {id=Model.idProducto})" />
                            <br />
                            <br />
                            <input type="file" name="imageload" />
                            <br />
                            @Html.ValidationMessageFor(model => model.imagen, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="col-md-10">
                        <label>Estado:</label>
                        @Html.EditorFor(model => model.estado, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.estado, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="mb-3">
                    <button type="submit" value="Create" class="btn btn-primary">Guardar</button>

                </div>

                <div class="mb-3">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>@ViewBag.Mensaje</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                </div>
            </form>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
