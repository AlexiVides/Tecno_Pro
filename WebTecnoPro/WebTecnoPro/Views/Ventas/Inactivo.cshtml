@model IEnumerable<WebTecnoPro.Models.Venta>

@{
    ViewBag.Title = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/Ventas.css">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


</head>
<body class="Ventas" style="font-size:16px; color:white;">

    <div>
        <h1 class="text-center">Ventas Eliminadas</h1>
    </div>


    <p class="btn btn-info" style="font-size:12px; color:white;">
        @Html.ActionLink("Atras", "Index")
    </p>
   



    <table class="table" border="1" style="font-size:16px; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.nombre) del producto
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado.nombre) empleado
            </th>

            <th>Opciones</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreCliente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cantidad)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleado.nombre)
                </td>

                <td class="btn btn-outline-info" style="font-size:12px;">
                    @Html.ActionLink("Actualizar", "Edit", new { id = item.idVenta })


                </td>
                <td class="btn btn-outline-info" style="font-size:12px; color:white;">
                    @Html.ActionLink("Detalles", "Details", new { id = item.idVenta })
                </td>
                <td class="btn btn-outline-danger" style="font-size:12px; color:white;">
                    @Html.ActionLink("Delete", "Delete", new { id = item.idVenta })
                </td>
            </tr>
        }

    </table>

</body>